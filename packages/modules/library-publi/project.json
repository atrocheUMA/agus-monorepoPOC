{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/modules/library-publi/src",
  "projectType": "library",
  "version":"0.0.1",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/modules/library-publi/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/modules/library-publi"],
      "options": {
        "jestConfig": "packages/modules/library-publi/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/modules/library-publi",
        "tsConfig": "packages/modules/library-publi/tsconfig.lib.json",
        "packageJson": "packages/modules/library-publi/package.json",
        "main": "packages/modules/library-publi/src/index.ts",
        "assets": ["packages/modules/library-publi/*.md"]
      }
    },
    "release": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "cd package/modules/library-publi && npm version {args.version}",
          {
            "command": "ng build library-publi --prod",
            "forwardAllArgs": false
          },
          {
            "command": "cd dist/module/library-publi && npm publish",
            "forwardAllArgs": false
          }
        ],
        "cwd": "./",
        "parallel": false
      }
    }
  },
  "tags": []
}
