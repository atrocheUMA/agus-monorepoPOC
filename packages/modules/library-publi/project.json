{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/modules/library-publi/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/modules/library-publi/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/modules/library-publi"],
      "options": {
        "jestConfig": "packages/modules/library-publi/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/modules/library-publi",
        "tsConfig": "packages/modules/library-publi/tsconfig.lib.json",
        "packageJson": "packages/modules/library-publi/package.json",
        "main": "packages/modules/library-publi/src/index.ts",
        "assets": ["packages/modules/library-publi/*.md"]
      }
    }
  },
  "tags": []
}
