{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/library-a/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/library-a",
        "main": "packages/library-a/src/index.ts",
        "tsConfig": "packages/library-a/tsconfig.lib.json",
        "assets": ["packages/library-a/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/library-a/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/library-a"],
      "options": {
        "jestConfig": "packages/library-a/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
